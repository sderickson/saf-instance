{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "esModuleInterop": true,    
    "forceConsistentCasingInFileNames": true,
    "strict": true,                          
    "skipLibCheck": true
  }
}
